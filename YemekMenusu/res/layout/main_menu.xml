<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dnm2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/gradient_bg"
        android:gravity="center" >

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Button"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.42"
            android:gravity="center_horizontal"
            android:text="Ana Menü"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Button"
            android:visibility="invisible" />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dip"
        android:columnCount="5"
        android:orientation="vertical" >

        <Button
            android:id="@+id/corbalar"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_column="1"
            android:layout_gravity="bottom"
            android:layout_row="0"
            android:alpha="20"
            android:background="@drawable/corba"
            android:gravity="bottom|center_horizontal|center_vertical"
            android:height="100dp"
            android:onClick="list"
            android:textColor="@color/red"
            android:textStyle="italic|bold"
            android:typeface="serif"
            android:width="100dp" />

        <Button
            android:id="@+id/arasicaklar"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_column="2"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_row="0"
            android:alpha="20"
            android:background="@drawable/arasicak"
            android:gravity="bottom|center_horizontal|center_vertical"
            android:height="100dp"
            android:onClick="list"
            android:textColor="@color/red"
            android:textStyle="italic|bold"
            android:typeface="serif"
            android:width="100dp" />

        <Button
            android:id="@+id/salatalar"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_column="3"
            android:layout_gravity="bottom"
            android:layout_row="0"
            android:alpha="20"
            android:background="@drawable/salata"
            android:gravity="bottom|center_horizontal|center_vertical"
            android:height="100dp"
            android:onClick="list"
            android:textColor="@color/red"
            android:textStyle="italic|bold"
            android:typeface="serif"
            android:width="100dp" />

        <Button
            android:id="@+id/hamurisleri"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_column="1"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dip"
            android:layout_row="1"
            android:alpha="20"
            android:background="@drawable/hamurisi"
            android:gravity="bottom|center_horizontal|center_vertical"
            android:height="100dp"
            android:onClick="list"
            android:textColor="@color/red"
            android:textStyle="italic|bold"
            android:typeface="serif"
            android:width="100dp" />

        <Button
            android:id="@+id/anayemekler"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_column="2"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dip"
            android:layout_row="1"
            android:alpha="20"
            android:background="@drawable/anayemek"
            android:gravity="bottom|center_horizontal|center_vertical"
            android:height="100dp"
            android:onClick="list"
            android:textColor="@color/red"
            android:textStyle="italic|bold"
            android:typeface="serif"
            android:width="100dp" />

        <Button
            android:id="@+id/denizurunleri"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_column="3"
            android:layout_gravity="bottom"
            android:layout_row="1"
            android:alpha="20"
            android:background="@drawable/denizurunu"
            android:gravity="bottom|center_horizontal|center_vertical"
            android:height="100dp"
            android:onClick="list"
            android:textColor="@color/red"
            android:textStyle="italic|bold"
            android:typeface="serif"
            android:width="100dp" />

        <Button
            android:id="@+id/sogukicecekler"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_column="1"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dip"
            android:layout_row="2"
            android:alpha="20"
            android:background="@drawable/kola"
            android:gravity="bottom|center_horizontal|center_vertical"
            android:height="100dp"
            android:onClick="list"
            android:textColor="@color/red"
            android:textStyle="italic|bold"
            android:typeface="serif"
            android:width="100dp" />

        <Button
            android:id="@+id/sicakicecekler"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_column="2"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dip"
            android:layout_row="02"
            android:alpha="20"
            android:background="@drawable/sicakicecek"
            android:gravity="bottom|center_horizontal|center_vertical"
            android:height="100dp"
            android:onClick="list"
            android:textColor="@color/red"
            android:textStyle="italic|bold"
            android:typeface="serif"
            android:width="100dp" />

        <Button
            android:id="@+id/tatlilar"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_column="3"
            android:layout_gravity="bottom"
            android:layout_row="2"
            android:alpha="20"
            android:background="@drawable/tatli"
            android:gravity="bottom|center_horizontal|center_vertical"
            android:height="100dp"
            android:onClick="list"
            android:textColor="@color/red"
            android:textStyle="italic|bold"
            android:typeface="serif"
            android:width="100dp" />
    </GridLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="fill"
        android:text="Button"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="351dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button5"
                android:layout_width="370dip"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttonbg"
                android:text="Restaurantımız Hakkında"
                android:onClick="aboutClicked" />

            <Button
                android:id="@+id/button6"
                android:layout_width="370dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttonbg"
                android:onClick="feedbackClicked"
                android:text="İstek ve Şikayetler" />

            <Button
                android:id="@+id/button7"
                android:layout_width="370dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttonbg"
                android:text="Dil Seçimi (Languages)" />
        </LinearLayout>

        <Button
            android:id="@+id/button4"
            android:layout_width="390dp"
            android:layout_height="340dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.86"
            android:background="@drawable/siparisbuttonbg"
            android:onClick="orders" />
    </LinearLayout>

</LinearLayout>
